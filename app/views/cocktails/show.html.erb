<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.picture_url %>);background-size: cover;">
  <div class="container p-5">
    <h1 style="color: white;"><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container mt-2">
    <div class="row">
      <div class="col">
        <ul>
          <h5>Ingredients</h2>
          <% @cocktail.doses.each do |dose| %>
            <li class="list-group-item">
              <%= dose.ingredient.name %> - <%= dose.description %>
              <%= link_to "Remove",
                        dose_path(dose),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col">
        <h5>Add a new dose</h1>
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit "Add Ingredient", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
